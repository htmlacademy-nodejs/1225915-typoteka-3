extends ../layout

block constants
  - const role = `author`;
  - const bodyClass = `wrapper wrapper--nobackground`;
  - const footerClass = `footer footer--padding`;

block main
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article of articles
          li.notes__list-item
            time.notes__item-time(datetime=`${article.created_at}`) #{article.created_at}
            a.notes__item-text(href=`/articles/${article.id}`) #{article.title}
            button.notes__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
